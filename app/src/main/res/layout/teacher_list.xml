<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/teacherimage"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/sir_abdulwahab"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tenames"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/teacherimage"
        android:layout_marginStart="26dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/teacherimage"
        android:hint="Teacher name"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/terank"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/teacherimage"
        android:layout_alignEnd="@+id/tenames"
        android:layout_marginBottom="12dp"
        android:hint="Teacher rank"
        android:textSize="20dp"/>


</RelativeLayout>